<!--                        android:background="@drawable/circle_fow"-->
<!--                        android:layout_gravity="center_vertical"-->
<!--                        android:gravity="center_vertical|center"-->
<!--                        android:text="FOW"-->
<!--                        android:textSize="@dimen/textLabels">-->

<!--                    </TextView>-->
<!--                </LinearLayout>-->
<!--                <TextView android:id="@+id/txt_report_status_fow"-->
<!--                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:gravity="top|center"-->
<!--                    android:text="0"-->
<!--                    android:textSize="@dimen/textLabels">-->

<!--                </TextView>-->

<!--            </LinearLayout>-->

        </LinearLayout>

        <LinearLayout android:layout_weight="0.1"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </LinearLayout>

            <LinearLayout android:layout_weight="0.1"
                android:id="@+id/layout_report_pay"
                android:layout_marginEnd="5dp" android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/button_pay_border"
                android:layout_height="match_parent"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/circle_pay"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="PAY"
                        android:textSize="@dimen/textLabels">

                    </TextView>
                </LinearLayout>

                <TextView android:id="@+id/txt_report_status_pay"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="top|center"
                    android:text="0"
                    android:textSize="@dimen/textLabels">

                </TextView>


            </LinearLayout>


            <LinearLayout android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_weight="0.1" android:paddingBottom="5dp" android:paddingTop="5dp"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout android:layout_weight="0.1" android:layout_marginEnd="5dp" android:layout_marginStart="5dp"
                android:id="@+id/layout_report_san"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/button_san_border"
                android:layout_height="match_parent" android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/circle_san"
                        android:layout_gravity="center_vertical" android:gravity="center_vertical|center"
                        android:text="SAN"
                        android:textSize="@dimen/textLabels">

                    </TextView>
                </LinearLayout>

                <TextView android:id="@+id/txt_report_status_san"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="top|center"
                    android:text="0"
                    android:textSize="@dimen/textLabels">

                </TextView>


            </LinearLayout>

            <LinearLayout android:layout_weight="0.1"
                android:id="@+id/layout_report_dis"
                android:layout_marginEnd="5dp" android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/button_dis_border"
                android:layout_height="match_parent"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/circle_dis"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="DIS"
                        android:textSize="@dimen/textLabels">

                    </TextView>
                </LinearLayout>

                <TextView android:id="@+id/txt_report_status_dis"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="top|center"
                    android:text="0"
                    android:textSize="@dimen/textLabels">

                </TextView>


            </LinearLayout>

            <LinearLayout android:layout_weight="0.1"
                android:id="@+id/layout_report_otc"
                android:layout_marginEnd="5dp" android:layout_marginStart="5dp"
