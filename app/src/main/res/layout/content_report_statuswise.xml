                android:orientation="vertical"
                android:background="@drawable/button_otc_border"
                android:layout_height="match_parent"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/circle_otc"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="OTC"
                        android:textSize="@dimen/textLabels">

                    </TextView>
                </LinearLayout>

                <TextView android:id="@+id/txt_report_status_otc"
                    android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="top|center"
                    android:text="0"
                    android:textSize="@dimen/textLabels">

                </TextView>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

