<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/square_lightyellow"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >

    <LinearLayout android:layout_weight="0.9"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Monthly Status Report"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/list_mobile_size"
            android:textStyle="bold"
        />

        <LinearLayout android:visibility="gone" android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_height="match_parent" >

            <TextView android:id="@+id/txt_report_orderwise_daily"
                android:layout_weight="0.5"
                android:paddingBottom="2dp" android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_blue_fill"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Daily"
                android:textSize="@dimen/textLabelsSmall">

            </TextView>

        </LinearLayout>

        <LinearLayout android:visibility="gone" android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:paddingEnd="5dp"
            android:layout_height="match_parent" >
            <TextView android:id="@+id/txt_report_orderwise_weekly"
                android:layout_weight="0.5"
                android:paddingBottom="2dp" android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_blue_border"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Weekly"
                android:textSize="@dimen/textLabelsSmall">

            </TextView>
        </LinearLayout>

        <LinearLayout android:visibility="gone" android:layout_weight="0.1"
            android:layout_width="match_parent" android:paddingEnd="5dp"
            android:layout_height="match_parent" >
            <TextView android:id="@+id/txt_report_orderwise_monthly"
                android:layout_weight="0.5" android:paddingBottom="2dp" android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_blue_border"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center" android:text="Monthly"
                android:textSize="@dimen/textLabelsSmall">

            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_weight="0.9"
        android:paddingStart="5dp" android:paddingEnd="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/but_reportorderwise_back"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.6"
            android:background="@drawable/button_blue_border"
            android:layout_gravity="center"
            app:icon="@drawable/back"
            app:iconGravity="textTop"
            android:foreground="?attr/selectableItemBackground"
            />

        <LinearLayout android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:paddingEnd="5dp" android:paddingStart="5dp"
            android:layout_height="match_parent">
            <TextView android:id="@+id/txt_report_currentselection"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/textLabels"
                android:background="@drawable/button_green_border"
                android:foreground="?attr/selectableItemBackground"
                android:layout_height="wrap_content"
                android:text="22-27 June">

            </TextView>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/but_reportorderwise_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.6"
            android:background="@drawable/button_blue_border"
            android:layout_gravity="center"
            app:icon="@drawable/next"
            app:iconGravity="textTop"
            android:foreground="?attr/selectableItemBackground"
            />

    </LinearLayout>

    <LinearLayout android:layout_weight="0.1"
        android:layout_width="match_parent" android:orientation="vertical"
        android:paddingStart="5dp" android:paddingEnd="5dp" android:paddingBottom="5dp" android:paddingTop="5dp"
        android:layout_height="match_parent">

        <LinearLayout android:layout_weight="0.1" android:paddingBottom="5dp" android:paddingTop="5dp"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout android:layout_weight="0.1" android:layout_marginEnd="5dp" android:layout_marginStart="5dp"
                android:id="@+id/layout_report_new" android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent" android:orientation="vertical"
                android:background="@drawable/button_new_border"
                android:layout_height="match_parent" >
                <LinearLayout android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/circle_new"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="NEW"
                        android:textSize="@dimen/textLabels">

                    </TextView>
                </LinearLayout>


                <TextView  android:id="@+id/txt_report_status_new"
                    android:layout_weight="0.5"
                    android:paddingBottom="2dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center|center_horizontal"
                    android:gravity="top|center|center_horizontal"
                    android:text="0"
                    android:textSize="@dimen/textLabels">

                </TextView>


            </LinearLayout>

<!--            <LinearLayout android:layout_weight="0.1"-->
