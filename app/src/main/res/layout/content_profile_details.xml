<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:backgroundTint="#ffffff"
    android:background="#ffffff"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >

    <LinearLayout
        android:layout_weight="0.22"
        android:background="@drawable/roundbutton_lightblue"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            >

            <TextView
                android:id="@+id/text_profile_details_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Vikas Malhotra"
                android:layout_weight="0.65"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:textSize="@dimen/list_name_size"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/text_profile_details_mobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9823956268"
                android:textSize="@dimen/list_mobile_size"
                android:layout_weight="0.35"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_gravity="center|end"
                android:gravity="center|end"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            >
            <TextView
                android:id="@+id/text_profile_details_address"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:text="Lane 11, Gokul, FC Road, Pune"
                android:textSize="@dimen/list_mobile_size"
                android:layout_weight="0.75"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_gravity="bottom"
                android:gravity="top|start"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.22"
        android:background="@drawable/roundbutton_lightblue"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/text_profile_details_choice_of_bank"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="State Bank Of India"
                android:layout_weight="0.75"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textSize="@dimen/list_mobile_size"
                />

            <TextView
                android:id="@+id/text_profile_details_type_of_product"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="LAP - Mortgage Loan"
                android:textSize="@dimen/list_mobile_size"
                android:layout_weight="0.75"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_gravity="bottom"
                android:gravity="right"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/text_profile_details_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8900000"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:padding="2dp"
                android:paddingStart="15dp"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal|left|center"
                android:textSize="@dimen/list_name_size"
                />

            <TextView
                android:id="@+id/text_profile_details_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="NEW"
                android:layout_weight="0.5"
                android:textSize="@dimen/textLabels"
                android:textColor="@color/black"
                android:padding="10dp"
                android:visibility="visible"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center|right"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            >

            <TextView
                android:id="@+id/circle_1"
                android:background="@drawable/circle_gray"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="2dp"
                android:layout_marginStart="40dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal|left|center"
                />
            <View
                android:layout_width="45dp"
                android:layout_height="2dp"
                android:layout_gravity="center|center_vertical"
                android:background="#c0c0c0"/>
            <TextView
                android:id="@+id/circle_2"
                android:background="@drawable/circle_gray"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal|left|center"
                />
            <View
                android:layout_width="45dp"
                android:layout_height="2dp"
                android:layout_gravity="center|center_vertical"
                android:background="#c0c0c0"/>
            <TextView
                android:id="@+id/circle_3"
                android:background="@drawable/circle_gray"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal|left|center"
                />
            <View
                android:layout_width="45dp"
                android:layout_height="2dp"
                android:layout_gravity="center|center_vertical"
                android:background="#c0c0c0"/>
            <TextView
                android:id="@+id/circle_4"
                android:background="@drawable/circle_gray"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal|left|center"
                />
            <View
                android:layout_width="45dp"
                android:layout_height="2dp"
                android:layout_gravity="center|center_vertical"
                android:background="#c0c0c0"/>
            <TextView
                android:id="@+id/circle_5"
                android:background="@drawable/circle_gray"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal|left|center"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.51"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="0.85"
            android:id="@+id/list_profile_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            tools:listitem="@layout/item_profile_history" />

        <LinearLayout
            android:id="@+id/ll_profile_details_button"
            android:layout_weight="0.15"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            >

            <Button
                android:layout_weight="0.5"
                android:id="@+id/button_profile_details_edit"
                android:layout_width="match_parent"
                android:background="@drawable/roundbutton_blue"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="50dp"
                android:textSize="@dimen/textLabels"
                android:text="@string/profile_details_edit_button"
                android:textColor="#ffffff" />

            <Button
                android:layout_weight="0.5"
                android:id="@+id/button_profile_details_close"
                android:layout_width="match_parent"
                android:background="@drawable/roundbutton_blue"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="50dp"
                android:textSize="@dimen/textLabels"
                android:text="@string/profile_details_close_button"
                android:textColor="#ffffff" />

        </LinearLayout>




    </LinearLayout>



</LinearLayout>