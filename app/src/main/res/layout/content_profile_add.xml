<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/square_greyborder"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >

    <LinearLayout
        android:layout_weight="0.1"
        android:background="@drawable/square_greyborder"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/profile_name"
                android:textSize="@dimen/textLabels"
                android:layout_weight="0.75"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_gravity="start|top"
                android:gravity="start|top"
                />
            <EditText
                android:background="@drawable/edittextbox"
                android:id="@+id/text_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:padding="10dp"
                android:maxLength="50"
                android:maxLines="1"
                android:textSize="@dimen/textLabels"
                android:hint="@string/profile_name"
                android:autofillHints="name"
                android:visibility="visible"
                android:inputType="text|textCapWords"
                android:layout_marginEnd="4dp"
                android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM "
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/profile_mobile"
                android:textSize="@dimen/textLabels"
                android:layout_weight="0.75"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_gravity="start|top"
                android:gravity="start|top"
                />
            <EditText
                android:background="@drawable/edittextbox"
                android:id="@+id/text_user_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:padding="10dp"
                android:maxLength="15"
                android:autofillHints="phone"
                android:inputType="phone"
                android:textSize="@dimen/textLabels"
                android:hint="@string/profile_mobile"
                android:visibility="visible"
                android:layout_marginEnd="4dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/profile_Address"
                android:textSize="@dimen/textLabels"
                android:layout_weight="0.75"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_gravity="start"
                android:gravity="start|top"
                />
            <EditText
                android:background="@drawable/edittextbox"
                android:id="@+id/text_user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:padding="10dp"
                android:textSize="@dimen/textLabels"
                android:hint="@string/profile_Address"
                android:visibility="visible"
                android:autofillHints="postalAddress"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="3"
                android:maxLines="3"
                android:gravity="top|start"
                android:layout_marginEnd="4dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/profile_reference"
                android:textSize="@dimen/textLabels"
                android:layout_weight="0.75"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_gravity="start|top"
                android:gravity="start|top"
                />
            <EditText
                android:background="@drawable/edittextbox"
                android:id="@+id/text_user_reference"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:padding="10dp"
                android:maxLength="50"
                android:textSize="@dimen/textLabels"
                android:hint="@string/profile_reference"
                android:autofillHints="name"
                android:visibility="visible"
                android:inputType="text|textCapWords"
                android:layout_marginEnd="4dp"
                android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM "
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.1"
        android:background="@drawable/square_greyborder"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/profile_type_of_product"
                android:textSize="@dimen/textLabels"
                android:layout_weight="0.75"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_gravity="start|top"
                android:gravity="start|top"
                />
            <LinearLayout
                android:layout_weight="0.25"
                android:layout_marginEnd="4dp"
                android:background="@drawable/spinner_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner
                    android:id="@+id/spinner_type_of_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/textLabels"
                    android:hint="@string/profile_type_of_product"
                    android:visibility="visible"
                    android:spinnerMode="dropdown"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="start|center_vertical"
                    />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/profile_choice_of_bank"
                android:textSize="@dimen/textLabels"
                android:layout_weight="0.75"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_gravity="start|top"
                android:gravity="start|top"
                />
            <EditText
                android:background="@drawable/edittextbox"
                android:id="@+id/text_user_choice_of_bank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:padding="10dp"
                android:textColor="@color/black"
                android:inputType="text|textCapWords"
                android:textSize="@dimen/textLabels"
                android:hint="@string/profile_choice_of_bank"
                android:visibility="visible"
                android:layout_marginEnd="4dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/profile_bank_manager"
                android:textSize="@dimen/textLabels"
                android:layout_weight="0.75"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_gravity="start|top"
                android:gravity="start|top"
                />
            <EditText
                android:background="@drawable/edittextbox"
                android:id="@+id/text_user_bank_manager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:padding="10dp"
                android:textColor="@color/black"
                android:inputType="text|textCapWords"
                android:textSize="@dimen/textLabels"
                android:hint="@string/profile_bank_manager_2"
                android:visibility="visible"
                android:layout_marginEnd="4dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/profile_code"
                android:textSize="@dimen/textLabels"
                android:layout_weight="0.75"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_gravity="start|top"
                android:gravity="start|top"
                />
            <EditText
                android:background="@drawable/edittextbox"
                android:id="@+id/text_user_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:padding="10dp"
                android:textColor="@color/black"
                android:inputType="text|textCapWords"
                android:textSize="@dimen/textLabels"
                android:hint="@string/profile_code"
                android:visibility="visible"
                android:layout_marginEnd="4dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/profile_amount"
                android:textSize="@dimen/textLabels"
                android:layout_weight="0.75"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_gravity="start|top"
                android:gravity="start|top"
                />
            <EditText
                android:background="@drawable/edittextbox"
                android:id="@+id/text_user_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:padding="10dp"
                android:textColor="@color/black"
                android:inputType="number"
                android:maxLength="12"
                android:textSize="@dimen/textLabels"
                android:hint="@string/profile_amount"
                android:visibility="visible"
                android:layout_marginEnd="4dp"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:background="@drawable/square_greyborder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >

        <com.google.android.material.button.MaterialButton
            android:layout_weight="0.5"
            android:padding="5dp"
            android:id="@+id/button_profile_cancel"
            android:layout_width="match_parent"
            android:background="@drawable/roundbutton_blue"
            app:icon="@drawable/cancel"
            app:iconGravity="textStart"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="50dp"
            android:textSize="@dimen/textLabels"
            android:text="@string/profile_cancel_button"
            android:layout_margin="4dp"
            android:textColor="#ffffff"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_weight="0.5"
            android:padding="5dp"
            android:id="@+id/button_profile_save"
            android:layout_width="match_parent"
            android:background="@drawable/roundbutton_blue"
            app:icon="@drawable/profile_save"
            app:iconGravity="textStart"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="50dp"
            android:textSize="@dimen/textLabels"
            android:text="@string/profile_save_button"
            android:layout_margin="4dp"
            android:textColor="#ffffff"
            />


    </LinearLayout>

</LinearLayout>